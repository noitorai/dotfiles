# local configuration for each environment

## locale setting
# I prefer C in time output and message output
export LC_TIME="C"  LC_MESSAGES="C"

# load my functions
source .bash_functions

load_sshagent

# add key if not exists
if ! ssh-add -l ; then
    ssh-add
fi

alias ssh=ssh_chkagent

